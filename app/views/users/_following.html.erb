<div class="col-md-6">
  <div id="following-<%= following.id %>">
    <section class="user_info">
      <%= link_to user_path(following.id) do %>
        <%= gravatar_for following , size: 50 %>
      <% end %>
      <div><%= link_to following.name, user_path(following.id) %></div>
      <div><%= following.email %></div>
    </section>
  </div>
</div>