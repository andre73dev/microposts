<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.follower_users.any? %>
      <div class="row">
        <% @followers.each do |follower| %>
          <%= render partial: 'users/follower', locals: { follower: follower } %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>